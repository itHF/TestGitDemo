using UnityEngine;
using System.Collections;

public class Tooltip_wl : MonoBehaviour
{
	public string tip;

	void OnTooltip()
	{
		UITooltip.ShowText (tip);
	}

	void OnHover()
	{
		UITooltip.ShowText ("");
	}
}
