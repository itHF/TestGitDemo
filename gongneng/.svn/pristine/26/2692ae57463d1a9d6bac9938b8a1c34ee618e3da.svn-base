using UnityEngine;
using System.Collections;

public class TooltipTool_wl : MonoBehaviour
{
	public string tip;

	void OnTooltip()
	{
		UITooltipTool.ShowText (tip, this.gameObject.transform);
	}

	void OnHover()
	{
        UITooltipTool.ShowText ("", null);
	}
}
