using UnityEngine;
using System.Collections;

public class TooltipMenu_wl : MonoBehaviour
{
	public string tip;

	void OnTooltip()
	{
		UITooltipMenu.ShowText (tip, this.gameObject.transform);
	}

	void OnHover()
	{
        UITooltipMenu.ShowText ("", null);
	}
}
